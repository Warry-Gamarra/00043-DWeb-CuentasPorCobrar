@model BLL_LIB.Helpers.ResponseViewModel


<div class="col-md-12" style="display:none" id="loading">
    <h6>Espere un momento...</h6>
    <div class="progress">
        <div class="indeterminate"></div>
    </div>
</div>

<div class="text-center alert alert-@Model.color"><i class="fa @Model.icon">&nbsp;</i>@Html.Raw(Model.message)</div>

<button type="submit" class="btn btn-default btn-primary" style="@Model.CurrentID"><i class="fa fa-save"></i>&nbsp;Guardar</button>
<button type="button" class="btn btn-default" data-dismiss="modal"><i class="fa fa-times-circle-o">&nbsp;</i>Cerrar</button>

<script>
    $(".modal").on('hide.bs.modal', function () {
        location.reload();
    })
</script>