@model IEnumerable<WebApp.ViewModels.PeriodoViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Periodos Académicos(Descripción de Cuota de Pago)</h2>

<p>
    @Html.ActionLink("Nuevo registro", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nro_Cuenta_Corriente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Codigo_Banco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_Vencimiento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prioridad)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nro_Cuenta_Corriente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo_Banco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Vencimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prioridad)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
