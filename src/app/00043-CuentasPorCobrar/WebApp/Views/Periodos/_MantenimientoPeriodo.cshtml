@model WebApp.ViewModels.MantenimientoPeriodoViewModel

<div class="modal-header bg-dark-gray" style="border-radius: .2rem .2rem 0px 0px">
    <h5 class="modal-title text-center"><i class="fa fa-address-book">&nbsp;</i> @ViewBag.Title</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
</div>
@using (Ajax.BeginForm("Save", "Periodos", new { area = "" }, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "div_msg", OnBegin = "Load", OnComplete = "Stop" }))
{
    @Html.Hidden("Submited", 0)
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="container-fluid">
            <fieldset>
                <legend><i class="fa fa-address-book-o">&nbsp;</i>Datos de la cuenta</legend>
                @Html.HiddenFor(model => model.I_PeriodoID)
                @Html.HiddenFor(model => model.B_Habilitado)

                <div class="form-group row">
                    @Html.LabelFor(model => model.I_TipoPeriodoID, new { @class = "col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownListFor(model => model.I_TipoPeriodoID, new SelectList(ViewBag.Lista_Tipo_Periodo, "I_TipoPeriodoID", "T_TipoPerDesc"), "[ SELECCIONAR ]", new { @class = "form-control" })
                        <p class="text-danger small">@Html.ValidationMessageFor(model => model.I_TipoPeriodoID)</p>
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.I_Anio, new { @class = "col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownListFor(model => model.I_Anio, new SelectList(ViewBag.Lista_Anios), "[ SELECCIONAR ]", new { @class = "form-control" })
                        <p class="text-danger small">@Html.ValidationMessageFor(model => model.I_Anio)</p>
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.D_FecVencto, new { @class = "col-md-4" })
                    <div class="col-md-8">
                        <div class='input-group date' id='datepicker_fecvento'>
                            @Html.TextBoxFor(model => model.D_FecVencto, new { @class = "form-control" })
                            <span class="input-group-addon"><i class="fa fa-calendar-o"></i></span>
                            <p class="text-danger small">@Html.ValidationMessageFor(model => model.D_FecVencto)</p>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.I_Prioridad, new { @class = "col-md-4" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.I_Prioridad, new { @class = "form-control" })
                        <p class="text-danger small">@Html.ValidationMessageFor(model => model.I_Prioridad)</p>
                    </div>
                </div>

            </fieldset>
        </div>

    </div>

    <div class="modal-footer" id="div_msg">
        <div class="col-md-12" style="display:none" id="loading">
            <h6>Actualizando los datos...</h6>

            <div class="progress">
                <div class="indeterminate"></div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary" id="btnsubmit"><i class="fa fa-save"></i>&nbsp;Guardar</button>
        <button type="button" class="btn btn-secondary" id="btnCancel" data-dismiss="modal"><i class="fa fa-times-circle-o">&nbsp;</i>Cancelar</button>
    </div>

    <script>
        $('#datepicker_fecvento').datepicker({
            todayBtn: 'linked',
            language: 'es',
            format: 'dd/mm/yyyy',
            autoclose: true,
            weekStart: 0,
            calendarWeeks: true
        }).on('hide', function (e) {
            e.stopPropagation();
        });
    </script>
}
