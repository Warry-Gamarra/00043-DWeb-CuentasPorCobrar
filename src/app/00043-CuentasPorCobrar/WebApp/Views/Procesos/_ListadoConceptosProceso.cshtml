@model IEnumerable<WebApp.ViewModels.ConceptoPagoViewModel>

<div class="modal-header bg-dark-gray" style="border-radius: .2rem .2rem 0px 0px">
    <h5 class="modal-title text-center"><i class="fa fa-tag">&nbsp;</i> @ViewBag.Title </h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
</div>

<div class="modal-body">
    <div id="spin-loader" class="container-fluid" style="display:none;">
        <div class="d-flex justify-content-center">
            <div class="spinner-border text-info" role="status" style="width: 5rem; height: 5rem;">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <span id="load-message" class="h5 mt-4"></span>
        </div>
    </div>
    <div class="container-fluid" id="content-body">
        @using GridMvc.Html
        <p class="h3 my-2 border-bottom">Conceptos Registrados</p>
        <div class="table-responsive my-3">
            @Html.Grid(Model).Columns(columns =>
            {
                   columns.Add(c => c.ConceptoDesc).Titled("Descripción").Filterable(false);
                   columns.Add(c => c.Monto).Titled("Monto").Css("text-right").Filterable(false);
                   columns.Add(c => c.Habilitado).SetWidth(100).Css("text-center").Encoded(false).Sanitized(false)
                         .RenderValueAs(model => model.Habilitado ?
                                                              @Html.Raw("<span id=\"td" + @model.ConceptoPagoID + "\"><button type=\"submit\" class=\"btn btn-xs btn-success\" onclick=\"ChangeStateReloadPage(" + @model.ConceptoPagoID + ", " + @model.Habilitado.ToString().ToLower() + ", '" + @Url.Action("ChangeState", "ConceptoPago") + "');\"><i class=\"fa fa-check-circle-o\">&nbsp;</i><span class=\"d-none d-md-inline-block\">Habilitado</span></button></span>")
                                                         : @Html.Raw("<span id=\"td" + @model.ConceptoPagoID + "\"><button type=\"submit\" class=\"btn btn-xs btn-secondary\" onclick=\"ChangeStateReloadPage(" + @model.ConceptoPagoID + ", " + @model.Habilitado.ToString().ToLower() + ", '" + @Url.Action("ChangeState", "ConceptoPago") + "');\"><i class=\"fa fa-minus-circle\">&nbsp;</i><span class=\"d-none d-md-inline-block\">Deshabilitado</span></button></span>"))
                         .Filterable(false).SetWidth(160).Titled("Estado");
                   columns.Add().SetWidth(200).Css("text-right").Encoded(false).Sanitized(false).
                   RenderValueAs(model => @<a href="@Url.Action("Edit", "ConceptoPago", new { id = model.ConceptoPagoID })" class="modal-link btn-editar"><i class="fa fa-pencil-square-o" aria-hidden="true">&nbsp;</i><span class="d-none d-md-inline-block">Editar</span></a>);
             }).WithPaging(10).Sortable(true).WithGridItemsCount("Registros encontrados").EmptyText("No se encontraron registros")
        </div>
        <div class="d-flex justify-content-center">
            <a href="@Url.Action("Create","ConceptoPago", new { procesoId = ViewBag.ProcesoId })" class="btn btn-primary" id="btn-agregar"><i class="fa bi-ui-checks-grid">&nbsp;</i>Agregar concepto</a>
        </div>
    </div>
</div>

<div class="modal-footer" id="div_msg">
    <button type="button" class="btn btn-secondary" id="btnCancel" data-dismiss="modal"><i class="fa fa-times-circle-o">&nbsp;</i>Cancelar</button>
</div>

<script>
    $(document).ready(function () {
        $('#btn-agregar').on('click', function (event) {
            event.preventDefault();
            var url = $(event.target).attr("href");

            loadForm(url, "obteniendo formulario")
        })

        $('.btn-editar').on('click', function (event) {
            event.preventDefault();
            var url = $(event.target).attr("href");

            loadForm(url, "obteniendo datos del concepto")
        })

        function loadForm(url, message) {
            $('#load-message').html(message);
            $('#content-body').hide();
            $('#spin-loader').show();

            $('#content-body').load(url);
            setTimeout(function () {
                $('#spin-loader').hide();
                $('#content-body').show();
            }, 600);

        }
    })
</script>