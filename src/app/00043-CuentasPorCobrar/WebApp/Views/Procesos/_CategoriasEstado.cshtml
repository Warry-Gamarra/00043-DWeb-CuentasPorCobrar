@model IEnumerable<WebApp.ViewModels.CategoriaProcesoViewModel>

<link href="~/Assets/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

<script src="~/Assets/datatables/js/jquery.dataTables.min.js"></script>
<script src="~/Assets/datatables/js/dataTables.bootstrap4.min.js"></script>


<table class="table table-hover" id="tbl-categorias" style="width: 100% ">
    <thead class="">
        <tr>
            <th>TIPO DE OBLIGACIÓN</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>@item.Nombre</td>
                <td>@*<span class="badge badge-primary badge-pill">@item.cantidadProcesos PROCESOS</span>*@</td>
                <td>@*<span class="badge badge-primary badge-pill">@item.cantidadConceptos CONCEPTOS</span>*@</td>
                <td class="text-right">
                    <a class="btn btn-xs btn-info" href="@Url.Action("ProcesosCategoria", "Procesos", new { categoriaId = item.Id, aaaa = item.Anio, grado = item.PeriodoId })">
                        <i class="fa fa-check">&nbsp;</i>Seleccionar
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>

<script>
    $('#tbl-categorias').DataTable({
        "language": {
            "zeroRecords": "No se encontraron resultados para la búsqueda",
            "info": "Mostrando _START_ - _END_ (de _TOTAL_ registros encontrados)",
            "lengthMenu": "Mostrar _MENU_ resultados por página", 
            "infoEmpty": "No se encontraron resultados disponibles",
            "infoFiltered": "(filtrados desde _MAX_ total resultados)",
            "loadingRecords": "Cargando...",
            "processing": "Procesando...",
            "search": "Filtro:",
            "paginate": {
                "first": "Primero",
                "last": "Ultimo",
                "previous": "Anterior",
                "next": "Siguiente"
            }
        },
        "lengthChange": false,
        "searching": false,
        "pageLength": 12,
        "ordering": false,
    });
</script>
