@model WebApp.ViewModels.DatosPagoViewModel

<div class="card">
    <div class="card-body">
        <h6 class="card-subtitle mb-2 text-muted">Información de pago</h6>
        @Html.HiddenFor(model => model.PagoId)
        @Html.HiddenFor(model => model.FecPago)
        @Html.HiddenFor(model => model.MontoPago)

        @if (Model.PagoId == 0)
        {
            <p class="text-center text-@ViewBag.Color">@ViewBag.Mensaje</p>
        }
        else
        {
            <div class="form-group row">
                @Html.LabelFor(model => model.Concepto, new { @class = "col-md-4 control-label" })
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.Concepto)
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.LugarPago, new { @class = "col-md-4 control-label" })
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.LugarPago)
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.FecPago, new { @class = "col-md-4 control-label" })
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.FecPago)
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.MontoPago, new { @class = "control-label" })
                    <span class="pull-right">@Model.MontoPago</span>
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(model => model.NroSIAF, new { @class = "control-label" })
                    <span class="pull-right">@Model.NroSIAF</span>
                </div>
            </div>
        }

        <div id="loader" class="container-fluid" style="display:none;">
            <div class="d-flex justify-content-center">
                <div class="spinner-border text-info" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
                <div class="d-flex justify-content-center">
                    <span id="load-message" class="h5 mt-4"></span>
                </div>
            </div>
        </div>

    </div>
</div>