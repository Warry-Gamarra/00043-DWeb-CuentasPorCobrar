
@model IEnumerable<WebApp.ViewModels.DatosPagoViewModel>

<div class="container-fluid">
    <div class="col-12">
        <section class="content-header">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb float-right small d-none d-sm-inline-flex">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")"><i class="fa fa-home">&nbsp;</i>Inicio</a></li>
                    <li class="breadcrumb-item"><span><i class="fa fa-refresh">&nbsp;</i>Operaciones </span></li>
                    <li class="breadcrumb-item active"><span><i class="fa fa-database">&nbsp;</i>@ViewBag.Title </span></li>
                </ol>
            </nav>
            <h1 class="">@ViewBag.Title <small></small></h1>
        </section>
    </div>
    <br />
    <div class="col-12 mt-4">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body bg-light-gray">
                        <form>
                            <div id="datepicker" class="input-daterange form-row">
                                <div class="form-group col-md-3 col-lg-2 col-sm-4 col-12">
                                    <label for="inputCodAlu">Desde</label>
                                    <div class="input-group">
                                        @Html.TextBox("txtFecDesde", "", new { @class = "form-control", required = "required" })
                                        <div class="input-group-append">
                                            <span class="input-group-text"><i class="fa fa-calendar-o"></i></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-md-3 col-lg-2 col-sm-4 col-12">
                                    <label for="inputCodAlu">Hasta</label>
                                    <div class="input-group">
                                        @Html.TextBox("txtFecHasta", "", new { @class = "form-control", required = "required" })
                                        <div class="input-group-append">
                                            <span class="input-group-text"><i class="fa fa-calendar-o"></i></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-lg-2 col-sm-3 col-12 d-flex">
                                    <button type="submit" class="btn btn-block btn-outline-primary align-self-end"><i class="fa fa-fw fa-search-plus">&nbsp;</i> Iniciar consulta</button>
                                </div>
                                <div class="form-group col d-flex">
                                    <a href="@Url.Action("RegistrarSiaf", "Pagos")" class="btn btn-outline-success align-self-end modal-link"><i class="fa fa-fw fa-filter">&nbsp;</i> Filtros</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="col-12 my-4">
        @Html.Partial("_ResultadoConsultaPagos", Model)
    </div>
</div>


<script>
    $(document).ready(function () {
        $('#datepicker.input-daterange').datepicker({
            todayBtn: 'linked',
            language: 'es',
            format: 'dd/MM/yyyy',
            autoclose: true,
            weekStart: 0,
            orientation: 'bottom auto',
            daysOfWeekDisabled: '0,6',
            calendarWeeks: true
        }).on('hide', function (e) {
            e.stopPropagation();
        });
    })
</script>