
<link href="~/Assets/fileInput/css/fileinput.min.css" rel="stylesheet" />
<script src="~/Assets/fileInput/js/fileinput.min.js"></script>
<script src="~/Assets/fileInput/js/locales/es.js"></script>
<script src="~/Assets/jquery/jquery.form.js"></script>

@using (Html.BeginForm("", "Pagos", FormMethod.Post, new { id = "form-upload", enctype = "multipart/form-data" }))
{
    <div class="modal-header">
        <h5 class="modal-title"><i class="fa fa-table text-primary">&nbsp;</i>Adjuntar archivo de pago @ViewBag.Tipo</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="col-md-12">
            <div class="form-row">
                <div class="form-group col-3">
                    @*@Html.LabelFor(model => model.Anio, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.Anio, new { @class = "form-control", @readonly = "true" })
                        <p class="text-danger small">@Html.ValidationMessageFor(model => model.Anio)</p>*@
                    <label class="control-label">Año</label>
                    <select class="form-control">
                        <option value="value">SELECCIONE</option>
                    </select>
                </div>
                <div class="form-group col-4">
                    @*@Html.LabelFor(model => model.PerAcadId, new { @class = "control-label" })*@
                    @*@Html.DropDownListFor(model => model.PerAcadId, ViewBag.Periodos as SelectList, "", new { @class = "select-filter form-control text-uppercase" })*@
                    <label class="control-label">Periodo</label>
                    <select class="form-control">
                        <option value="value">SELECCIONE</option>
                    </select>
                    @*<p class="text-danger small">@Html.ValidationMessageFor(model => model.PerAcadId)</p>*@
                </div>
                <div class="form-group col-5">
                    <label class="control-label">Entidad financiera</label>
                    <select class="form-control">
                        <option value="value">SELECCIONE</option>
                    </select>
                    @*<p class="text-danger small">@Html.ValidationMessageFor(model => model.PerAcadId)</p>*@
                </div>
            </div>
            <br />
            <div class="form-group form-row" id="div-file">
                <label class="control-label col-form-label col-md-3 col-sm-4 col-12">Seleccione archivo</label>
                <div class="col-md-9 col-sm-10 col-12">
                    <div class="file-loading">
                        <input id="input_file" type="file" name="file" required>
                    </div>
                    <div id="error-pago"></div>
                    <br />
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-info"><i id="icon-submit" class="fa fa-cloud-upload">&nbsp;</i>Cargar archivo</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
    </div>
}


<script>

    $("#input_file").fileinput({
        showCaption: true,
        dropZoneEnabled: false,
        language: 'es',
        allowedFileExtensions: ["dbf", "xls", "xlsx"],
        showPreview: false,
        showUpload: false,
        elErrorContainer: '#error-pago'
    }).on('change', function () {
        //$('#div-nom-mat').show();
    }).on('filecleared', function () {
        //$('#div-nom-mat').hide();
    });

    @*$(".btn-file").removeClass("btn-primary").addClass("btn-" + '@Model.Color');*@
    $(".btn-file>i").removeClass("glyphicon glyphicon-folder-open").addClass("fa fa-folder-open");
    $("button.fileinput-remove>i").removeClass("glyphicon glyphicon-trash").addClass("fa fa-trash");

    $('#form-upload').on('submit', function (event) {
        event.preventDefault();
        var form = $(this);

        form.ajaxSubmit({
            cache: false,
            url: form.attr('action'),
            type: "POST",
            processData: false,
            dataType: "json",
            beforeSend: function () {
                $('#icon-submit').removeClass('fa-cloud-upload').addClass('fa-spin fa-cog');
            },
            success: function (result) {
               if (result.Value) {
                   $('.modal-footer').html(
                       '<p class="alert alert-success">' + result['Message'] + '</p><button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>')
                } else {
                    $('.modal-footer').html('<p class="alert alert-danger">' + result['Message'] + '</p><button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>')
                }

                $('#icon-submit').addClass('fa-cloud-upload').removeClass('fa-spin fa-cog');

            },
            error: function (jqXHR, textStatus, errorThrown) {
                toastr.error(errorThrown);
                $('#icon-submit').addClass('fa-cloud-upload').removeClass('fa-spin fa-cog');
            }
        });
    })

</script>
