@model IEnumerable<WebApp.ViewModels.ClasificadorEquivalenciaViewModel>

<div>
    @if (Model.Count() == 0)
    {
        <div class="text-secondary text-italic">No se encontraron equivalencias para el clasificador el @ViewBag.Anio</div>
    }
    else
    {
        foreach (var item in Model)
        {
            <label class="checkbox col-md-6">
                <input type="checkbox" id="chk_@item.ConceptoEquivCod" name="chk_@item.ConceptoEquivCod" value="@item.Habilitado" class="chk_equivalencia" data-clasifEquivId="@item.ClasificadorEquivId" />
                @item.ConceptoEquivDesc
            </label>
            <span id="loader_@item.ConceptoEquivCod" class="spinner-border text-info" role="status" style="display:none;"></span>
        }
    }
</div>