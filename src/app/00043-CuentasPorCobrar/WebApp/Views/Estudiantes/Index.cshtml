<script>


    function reload(tipo) {
        if (tipo == 'alu') {
            $('#div-alu').css('border-color', '#67beff');
            $('#alu-icon').css('color', '#67beff').removeClass('fa-times-circle text-danger').addClass('fa-file-excel-o');
            $('#load-alu').removeClass('disabled');
            $('#load2-alu').hide();
            $('#load-alu').show();
        }

        if (tipo == 'mat') {
            $('#div-mat').css('border-color', '#f17171');
            $('#mat-icon').css('color', '#f17171').removeClass('fa-times-circle text-danger').addClass('fa-file-excel-o');;
            $('#load-mat').removeClass('disabled');
            $('#load2-mat').hide();
            $('#load-mat').show();
        }

    }

</script>
