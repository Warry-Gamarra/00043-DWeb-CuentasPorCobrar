                    </div>
                    <div class="card-footer text-muted p-0">
                        <a href="@Url.Action("CargarArchivoPregrado", "Estudiantes")" class="btn btn-info btn-block modal-link" style="padding:15px; border:none; border-radius:0px 0px 3px 3px;"><i class="fa fa-paperclip">&nbsp;</i>Adjuntar archivo</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card text-center border-blue">
                    <div class="card-body text-primary">
                        <p class="h1 my-5"><i class="fa fa-2x fa-graduation-cap"></i></p>
                        <p class="h5">Alumnos Posgrado</p>
                    </div>
                    <div class="card-footer text-muted p-0">
                        <a href="@Url.Action("CargarArchivoPosgrado", "Estudiantes")" class="btn btn-primary btn-block modal-link" style="padding:15px; border:none; border-radius:0px 0px 3px 3px;"><i class="fa fa-paperclip">&nbsp;</i>Adjuntar archivo</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

