
@model IEnumerable<WebApp.ViewModels.CuentaDepositoViewModel>

<div class="modal-header bg-dark-gray" style="border-radius: .2rem .2rem 0px 0px">
    <h5 class="modal-title text-center"><i class="fa fa-credit-card">&nbsp;</i>&nbsp;@ViewBag.Title</h5>
    <button id="btn-close-header" type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
</div>
<div class="modal-body">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Descripción</th>
                <th>Números</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Descripcion</td>
                    <td>@item.NumeroCuenta</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="modal-footer" style="justify-content: space-between;">
    <a href="@Url.Action("Index","CuentaDeposito", new { area = "" })" class="btn btn-primary"><i class="fa bi-tools">&nbsp;</i>Mant. de cuentas</a>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
</div>

