@model IEnumerable<WebApp.ViewModels.UserManualViewModel>

<div class="container-fluid">
    <div class="col-12">
        <section class="content-header">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb float-right small d-none d-sm-inline-flex">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")"><i class="fa fa-home">&nbsp;</i>Inicio</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "HelpCenter")"><i class="fa fa-life-ring">&nbsp;</i>Ayuda</a></li>
                    <li class="breadcrumb-item active"><span><i class="fa fa-book">&nbsp;</i>@ViewBag.Title </span></li>
                </ol>
            </nav>
            <h1 class="">@ViewBag.Title <small></small></h1>
        </section>
    </div>
    <br />

    <div class="col-12">
        <div class="card">
            <div class="card-header"><h5>Esta vista le permite descargar y/o visualizar el manual de usuario para un mejor uso de la aplicación.</h5></div>
            <div class="card-body">
                <h4>
                    <small class="text-info">Para ver el manual seleccionelo de la lista inferior.</small>
                </h4>
                <br />

                @if (Model.Count() > 0)
                {
                    <ul class="list-group">
                        @foreach (var item in Model)
                        {
                            <li class="list-group-item"><a href="@Url.Content(item.FilePath)" target="_blank" class="list-group-item"><b><span class="glyphicon glyphicon-download">&nbsp;</span>@item.FileName</b></a></li>
                        }
                    </ul>
                }
                else
                {
                    <p class="alert alert-warning"><i class="fa fa-frown-o fa-2x">&nbsp;</i> No se encontró ningún archivo de documentación o ayuda para el usuario</p>
                }
            </div>
        </div>
    </div>
</div>
