@model WebApp.ViewModels.MailAdminViewModel

@Scripts.Render("~/bundles/jqueryval")

<div class="modal-header bg-dark-primary" style="border-radius: 5px 5px 0px 0px">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title text-center"><i class="fa fa-address-book">&nbsp;</i> @ViewBag.Title</h4>
</div>
@using (Ajax.BeginForm("Save", "Mail", new { area = "" }, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "div_msg", OnBegin = "Load", OnComplete = "Stop" }))
{
    @Html.Hidden("Submited", 0)
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="row">
            <fieldset class="col-md-12">
                <legend><i class="fa fa-address-book-o">&nbsp;</i>Datos de la cuenta</legend>
                @Html.HiddenFor(model => model.N_IdSmtpCor)

                <div class="form-group">
                    @Html.LabelFor(model => model.T_MailAddress, new { @class = "col-md-4" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(model => model.T_MailAddress, new { @class = "form-control", placeholder = "Dirección de correo" })
                        <p class="text-danger">@Html.ValidationMessageFor(model => model.T_MailAddress)</p>
                    </div>
                </div>
                <div class="form-group"><br /></div>
                <div class="form-group">
                    @Html.LabelFor(model => model.T_Password, new { @class = "col-md-4" })
                    <div class="col-md-7">
                        @Html.PasswordFor(model => model.T_Password, new { @class = "form-control", placeholder = "Contraseña" })
                        <p class="text-danger">@Html.ValidationMessageFor(model => model.T_Password)</p>
                    </div>
                </div>
            </fieldset>
            <div class="col-md-12">&nbsp;</div>
            <fieldset class="col-md-12">
                <legend><i class="fa fa-server">&nbsp;</i>Datos del Servidor</legend>
                <div class="form-group">
                    @Html.LabelFor(model => model.T_HostName, new { @class = "col-md-4" })
                    <div class="col-md-7">
                        @Html.TextBoxFor(model => model.T_HostName, new { @class = "form-control", placeholder = "Nombre del Host" })
                        <p class="text-danger">@Html.ValidationMessageFor(model => model.T_HostName)</p>
                    </div>
                </div>
                <br /><br />
                <div class="col-md-6">
                    <div class="row form-group">
                        @Html.LabelFor(model => model.T_SecurityType, new { @class = "col-md-10" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.T_SecurityType, new { @class = "form-control", placeholder = "Tipo de Seguridad" })
                            <p class="text-danger">@Html.ValidationMessageFor(model => model.T_SecurityType)</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row form-group">
                        @Html.LabelFor(model => model.N_PortNumber, new { @class = "col-md-10" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.N_PortNumber, new { @class = "form-control", placeholder = "Numero de Puerto" })
                            <p class="text-danger">@Html.ValidationMessageFor(model => model.N_PortNumber)</p>
                        </div>
                    </div>
                </div>
            </fieldset>

        </div>

    </div>

    <div class="modal-footer" id="div_msg">
        <div class="col-md-12" style="display:none" id="loading">
            <h6>Actualizando los datos...</h6>

            <div class="progress">
                <div class="indeterminate"></div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary" id="btnsubmit"><i class="fa fa-save"></i>&nbsp;Guardar</button>
        <button type="button" class="btn btn-default" id="btnCancel" data-dismiss="modal"><i class="fa fa-times-circle-o">&nbsp;</i>Cancelar</button>
    </div>
}

<script>
    $(document).on('ready', function () {
        $('#btnsubmit').removeClass('disabled');
    });

    $("form").submit(function () {
        var submited = parseInt($("#Submited").val());
        $(this).submit(function () {
            if (submited > 0) {
                return false;
            }
            return true;
        });
        $("#Submited").val(submited + 1);
        return true;
    });
</script>